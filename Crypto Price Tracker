<body>
  <div class="container">
    <h2>ðŸ“ˆ Crypto Price Tracker (INR)</h2>
    <table>
      <thead>
        <tr>
          <th>Coin</th>
          <th>Price (â‚¹)</th>
          <th>24h Change</th>
        </tr>
      </thead>
      <tbody id="cryptoTable">
        <tr><td colspan="3">Loading...</td></tr>
      </tbody>
    </table>
  </div>

  <script>
    async function fetchCryptoPrices() {
      try {
        // Popular coins: BTC, ETH, DOGE, LTC, ADA, BNB, SOL, XRP
        const url = "https://api.coingecko.com/api/v3/coins/markets?vs_currency=inr&ids=bitcoin,ethereum,dogecoin,litecoin,cardano,binancecoin,solana,ripple";
        const response = await fetch(url);
        const data = await response.json();

        const table = document.getElementById("cryptoTable");
        table.innerHTML = "";

        data.forEach(coin => {
          const row = `
            <tr>
              <td>${coin.name} (${coin.symbol.toUpperCase()})</td>
              <td>â‚¹${coin.current_price.toLocaleString()}</td>
              <td class="${coin.price_change_percentage_24h >= 0 ? 'green' : 'red'}">
                ${coin.price_change_percentage_24h.toFixed(2)}%
              </td>
            </tr>
          `;
          table.innerHTML += row;
        });
      } catch (error) {
        console.error("Error fetching data:", error);
        document.getElementById("cryptoTable").innerHTML = `<tr><td colspan="3">Error fetching data!</td></tr>`;
      }
    }

    // Fetch immediately
    fetchCryptoPrices();
    // Update every 10 seconds
    setInterval(fetchCryptoPrices, 10000);
  </script>
</body>
